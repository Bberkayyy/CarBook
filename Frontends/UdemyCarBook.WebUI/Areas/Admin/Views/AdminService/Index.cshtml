@model List<ResultServiceDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
int count = 0;
}

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    @if(Model.Count()>0){
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Hizmetler Alanı</h4>
                            <p class="card-subtitle mb-4">
                                Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki bölümden gerçekleştirebilirsiniz.
                                Tema bütünlüğü için en fazla 4 hizmet girişi yapınız.
                            </p>
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Hizmet Adı</th>
                                            <th>Açıklama</th>
                                            <th>Icon Url</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model){
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.IconUrl</td>
                                        <td><a href="/Admin/AdminService/RemoveService/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminService/UpdateService/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Admin/AdminService/CreateService/" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
                            </div>
                        </div>
                    </div>
                    }
                     else{                        
                     <p class="bg-danger text-white p-4 text-center card-body table-responsive">Hizmet bilgisi bulunamadı. Hizmet bilgisi eklemek için "Yeni Hizmet Ekle" butonuna tıklayınız.</p>
                    <a href="/Admin/AdminService/CreateService/" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
                    }
                </div>
            </div>
        </div>
    </div>


