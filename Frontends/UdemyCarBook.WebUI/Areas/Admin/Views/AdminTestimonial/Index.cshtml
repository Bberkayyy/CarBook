@model List<ResultTestimonialDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    @if(Model.Count()>0){
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Ana Sayfa Referanslar Listesi</h4>
                            <p class="card-subtitle mb-4">
                                Müşterilerin hakkımızda söylediği ifadelerin yorum olarak ekleyip, düzenleyebildiğimiz sayfadır.
                            </p>
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ad Soyad</th>
                                            <th>Başlık</th>
                                            <th>Yorum</th>            
                                            <th>Sil</th>                                                   
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model){
                                    <tr>
                                        <td><img src="@item.ImageUrl" width="50" height="50" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>@item.Comment</td>
                                        <td><a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Ekle</a>
                            </div>
                        </div>
                    </div>
                    }
                     else{                        
                     <p class="bg-danger text-white p-4 text-center card-body table-responsive">Referans bilgisi bulunamadı. Refefans bilgisi eklemek için "Yeni Referans Ekle" butonuna tıklayınız.</p>
                    <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Ekle</a>
                    }
                </div>
            </div>
        </div>
    </div>




