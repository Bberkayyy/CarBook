@model List<ResultLocationDTO>
    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    @if(Model.Count()>0){
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Lokasyon Bilgileri Alanı</h4>
                            <p class="card-subtitle mb-4">
                                Anasayfa ve araç kiralama sayfasında yer alan araçların alınma ve bırakılma noktalarını temsil eden kısımdır. Lokasyon bilgilerinin isimleri bu sayfada yer almaktadır. Sağ tarafta yer alan buton üzerinden lokasyonun harita bilgisine ulaşabilirsiniz.
                            </p>
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Lokasyon Adı</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Konumu Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model){
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminLocation/RemoveLocation/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminLocation/UpdateLocation/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/AdminLocation/LocationDetail/@item.Id" class="btn btn-outline-dark">Konumu Aç</a></td>
                                    </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Yeni Lokasyon Ekle</a>
                            </div>
                        </div>
                    </div>
                    }
                     else{                        
                     <p class="bg-danger text-white p-4 text-center card-body table-responsive">Lokasyon bilgisi bulunamadı. Lokasyon bilgisi eklemek için "Yeni Lokasyon Ekle" butonuna tıklayınız.</p>
                    <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Yeni Lokasyon Ekle</a>
                    }
                </div>
            </div>
        </div>
    </div>
