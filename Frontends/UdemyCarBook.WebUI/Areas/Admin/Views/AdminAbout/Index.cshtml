
@model List<ResultAboutDTO>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    @if(Model.Count()>0){
                    <div class="card">                        
                        <div class="card-body">
                            <h4 class="card-title">Ana Sayfa Hakkımızda Alanı</h4>
                            <p class="card-subtitle mb-4">
                                Ana sayfanın ve hakkımızda sayfasının "hakkımızda" alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğü için lütfen 1 adet veri girişi yapınız
                            </p>
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Görsel Url</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model){
                                    
                                    <tr>
                                        
                                        <td>@item.title</td>
                                        <td>@item.description</td>
                                        <td>@item.imageUrl</td>
                                        <td><a href="/Admin/AdminAbout/RemoveAbout/@item.id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminAbout/UpdateAbout/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>
                            </div>
                        </div>                       
                    </div>
                    }
                     else{                        
                     <p class="bg-danger text-white p-4 text-center card-body table-responsive">Hakkımda bilgisi bulunamadı. Hakkımda bilgisi eklemek için "Yeni Hakkımda Ekle" butonuna tıklayınız.</p>
                     <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>
                    }
                </div>
            </div>
        </div>
    </div>






