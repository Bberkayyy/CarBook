@model List<ResultBannerDTO>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    @if(Model.Count()>0){
                    <div class="card">                        
                        <div class="card-body">
                            <h4 class="card-title">Ana Sayfa Banner Alanı</h4>
                            <p class="card-subtitle mb-4">
                                Ana sayfanın banner alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğü için lütfen 1 adet veri girişi yapınız
                            </p>
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Video Url</th>
                                            <th>Video Açıklama</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Videoyu Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model){
                                    
                                    <tr>
                                        
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.VideoUrl</td>
                                        <td>@item.VideoDescription</td>
                                        <td><a href="/Admin/AdminBanner/RemoveBanner/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminBanner/UpdateBanner/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="#" class="btn btn-outline-dark">Youtube'da Aç</a></td>
                                    </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-outline-primary">Yeni Banner Ekle</a>
                            </div>
                        </div>                       
                    </div>
                    }
                     else{                        
                     <p class="bg-danger text-white p-4 text-center card-body table-responsive">Banner bulunamadı. Ana sayfa banner eklemek için "Yeni Banner Ekle" butonuna tıklayınız.</p>
                     <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-outline-primary">Yeni Banner Ekle</a>
                    }
                </div>
            </div>
        </div>
    </div>




