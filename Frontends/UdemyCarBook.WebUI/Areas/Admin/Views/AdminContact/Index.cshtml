@model List<ResultContactDTO>
    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
    <link href="~/Admin/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/plugins/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/plugins/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/plugins/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css" />

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                @if(Model.Count()>0){
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Gelen Mesaj Sayfası</h4>
                            <p class="card-subtitle mb-4">
                                Ana sayfa üzerinden kullanıcıların iletişim kısmı aracılığıyla gönderdiği mesajların listesinin bulunduğu sayfadır. İlgili satıra tıklayıp mesajın detayını görebilirsiniz.
                            </p>

                            <table id="basic-datatable" class="table dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Gönderen</th>
                                        <th>Konu</th>
                                        <th>E-Mail</th>
                                        <th>Tarih</th>
                                        <th>Mesaj</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model){
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Email</td>
                                        <td>@item.SendDate.ToShortDateString()</td>
                                        <td>@item.Message</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                }
                     else{                        
                     <p class="bg-danger text-white p-4 text-center card-body table-responsive">Hakkımda bilgisi bulunamadı. Hakkımda bilgisi eklemek için "Yeni Hakkımda Ekle" butonuna tıklayınız.</p>
                <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>
                }
            </div>
        </div>
    </div>