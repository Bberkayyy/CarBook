@model List<ResultFeatureDTO>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                @if (Model.Count() > 0)
                {
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Araca Ait Özellik Ekleme Sayfası</h4>
                            <p class="card-subtitle mb-4">
                                Mevcut araca ait özellik tanımlaması yapabileceğiniz sayfadır.
                            </p>
                            <form method="post">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="form-check">
                                        <input type="hidden" asp-for="@Model[i].Id" />
                                        <input type="hidden" asp-for="@Model[i].Name" />
                                        <input type="checkbox" class="form-check-input" />
                                        <label class="form-check-label">@Model[i].Name</label>
                                    </div>
                                }
                                <br />
                                <button class="btn btn-primary">Ekle</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <p class="bg-danger text-white p-4 text-center card-body table-responsive">Özellik bulunamadı.Kategori eklemek için "Yeni Özellik Ekle" butonuna tıklayınız.</p>
                    <a href="#" class="btn btn-outline-primary">Yeni Özellik Ekle</a>
                }
            </div>
        </div>
    </div>
</div>