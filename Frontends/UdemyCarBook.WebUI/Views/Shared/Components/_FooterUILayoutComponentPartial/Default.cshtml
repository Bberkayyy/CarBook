@model List<ResultFooterAddressDTO>

<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            swal("Şartlar & Koşullar",
                "Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleştirileceği ofislerde yer alan anlaşma dökümanlarından ulaşabilirsiniz. Keyifli yolculuklar dileriz.")
        });
        $('#btn2').click(function () {
            swal("Güvenlik",
                "CarBook web sitemis AspCore teknolojisinde Sha256 şifreleme tekniğiyle verilerin tamamen şifreli olarak tutulmaktadır.Sistemizde JWT doğrulaması mevcuttur. Kulanıcılarımızın bilgileri sistemde kesinlikle saklanmamaktadır. Özel bilgiler şifrelenerek tutulmaktadır.")
        });
        $('#btn3').click(function () {
            swal("Çerezler", "Sizlere daha iyi hizmet sunabilmek için tarayıcı çerezlerini kullanmaktayız.")
        });
        $('#btn3').click(function () {
            swal("Sıkça Sorulan Sorular", "Sizlere daha iyi hizmet sunabilmek için tarayıcı çerezlerini kullanmaktayız.")
        });
        $('#btn3').click(function () {
            swal("Ödeme Yöntemleri", "Ödeme işlemleri aracı teslim alırken yapılmaktadır.")
        });
        $('#btn3').click(function () {
            swal("Nasıl Çalışır?", "1-Aracın alınacağı konumu seç. /n 2-Kiralama işlemlerini tamamla. /n 3-Mevcut konumdaki ofisimize uğrayın.")
        });
    });

</script>


